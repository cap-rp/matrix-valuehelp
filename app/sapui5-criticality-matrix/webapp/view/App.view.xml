<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ctrl="sapui5.criticality.matrix.control"
    controllerName="sapui5.criticality.matrix.controller.App">
    <App>
        <Page title="Criticality Matrix">
            <content>
                <VBox class="sapUiSmallMargin">
                    <Label text="Criticality" />
                    <Input id="matrixField"
                         value="{criticality}"
                           placeholder="Click to open matrix"
                           showValueHelp="true"
                           valueHelpOnly="true"
                           valueHelpRequest="onOpenMatrix"
                           editable="true" />
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>